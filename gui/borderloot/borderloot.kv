        text: 'Coffre Rare'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
    Button:
        text: 'Coffre Légendaire'
        size_hint_y: None
        height: 44
        on_release: root.select('item3')

<WeaponDropDown>:
    Button:     
        text: 'Pistolet'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Button:
        text: 'Fusil d assaut'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
    Button:
        text: 'Mitraillette'
        size_hint_y: None
        height: 44
        on_release: root.select('item3')
    Button:
        text: 'Fusil à pompe'
        size_hint_y: None
        height: 44
        on_release: root.select('item4')
    Button:
        text: 'Fusil Sniper'
        size_hint_y: None
        height: 44
        on_release: root.select('item5')
    Button:
        text: 'Grenade'
        size_hint_y: None
        height: 44
        on_release: root.select('item6')
    Button:
        text: 'Bouclier'
        size_hint_y: None
        height: 44
