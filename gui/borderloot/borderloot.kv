#:kivy 2.1.0

<WeaponDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')    

<BorderlootWidget>:
    BoxLayout:
        size: root.size
        Button:
            id: generation_button
            text: "GENERATE"
            on_release: root.display_text()
        Button:
            id: weapon_button
            text: "WEAPON"
            on_release: root.w_dropdown.open
        Label:
            id: item_display
            text: root.item_text
