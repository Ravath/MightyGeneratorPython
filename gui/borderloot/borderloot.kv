<RarityDropDown>:
    Button:
        text: 'Commun'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
        on_text: root
    Button:
        text: 'Uncommun'
        background_color: 0, 1, 0, 1
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
    Button:
        background_color: 0, 0, 1, 1
        text: 'Rare'
        size_hint_y: None
        height: 44
        on_release: root.select('item3')
    Button:
        background_color: 1, 0, 1, 1
        text: 'Épique'
        size_hint_y: None
        height: 44
        on_release: root.select('item4')
    Button:
        background_color: 1, 0, 0.4, 1
        text: 'E-TECH'
        size_hint_y: None
        height: 44
        on_release: root.select('item5')
    Button:
        background_color: 1, 0.5, 0, 2
        text: 'Légendaire'
        size_hint_y: None
        height: 44
        on_release: root.select('item6')

<BorderlootWidget>:
    BoxLayout:
        size: root.size
        Button:
            id: generation_button
            size_hint: 0.25, 0.2
            pos_hint: {"x":0,"y":0.8}
            text: "GENERATE"
            on_release: root.display_text()
        Button:
            id: treasure_button
            size_hint: 0.25, 0.2
            pos_hint: {"y":0.8}
            text: "COFFRE"
            on_release: root.t_dropdown.open(self)            
        Button:
            id: weapon_button
            size_hint: 0.25, 0.2
            pos_hint: {"y":0.8}
            text: "WEAPON"
            on_release: root.w_dropdown.open(self)
        Button:
            id: rarity_button
            size_hint: 0.25, 0.2
            pos_hint: {"y":0.8}
            text: "RARETÉ"
            on_release: root.r_dropdown.open(self)
        Label:
            id: item_display
            center: root.center
            text: root.item_text
